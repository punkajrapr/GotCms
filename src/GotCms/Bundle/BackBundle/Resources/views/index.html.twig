<!doctype html>
<html ng-app="gotcms">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="robots" content="noindex, nofollow">
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>Admin panel - GotCms</title>
    <base href="/admin"></base>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300" />

    <link href="{{ 'bundles/gotcmsback/css/gotcms.min.css' }}" rel="stylesheet" type="text/css" />
  </head>
  <body class="no-menu" ng-class="{'one-page': pageType == 'onePage'}">
    <ng-switch on="pageType">
      <div ng-switch-when="onePage">
        <div class="container">
          <div class="main-content">
            <div class="row">
              <div class="col-sm-10 col-lg-12">
                <div class="login-container">
                  <div class="text-center">
                    <h1>Admin</h1>
                  </div>

                  <div class="relative">
                    <div ui-view="messages"></div>
                    <div ui-view="content"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div ng-switch-default>
        <header>
          <div ui-view="topbar"></div>
        </header>

        <div class="main-container container">
          <div class="col-lg-12">
            <gc-breadcrumbs></gc-breadcrumbs>

            <div ui-view="messages"></div>
            <div class="page-content">
              <div ui-view="content"></div>
            </div>
          </div>
        </div>

        <a class="btn-scroll-up btn btn-small btn-inverse" id="btn-scroll-up" href="#">
          <i class="glyphicon glyphicon-open"></i>
        </a>
      </div>
    </ng-switch>

    {% javascripts '@GotCmsBackBundle/Resources/public/js/vendor.min.js' %}
      <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts '@GotCmsBackBundle/Resources/public/components/**/*.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts '@GotCmsBackBundle/Resources/public/js/gotcms.min.js' %}
      <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
  </body>
</html>
